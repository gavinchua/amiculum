@import "../style.styl";

//
// Header
// --------------------------------------------------

header
    padding 35px 0 20px

    .logo
        text-align center

        @media (min-width: width-tabletlandscape)
            text-align left

    .brandname
        display table
        height 60px
        text-align center
        width 100%

        @media (min-width: width-tabletlandscape)
            text-align right

        h4
            display table-cell
            font-size 16px
            vertical-align middle