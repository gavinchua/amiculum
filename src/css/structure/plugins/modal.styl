@import "../style.styl";

//
// Modal
// --------------------------------------------------

.modal-dialog
	@media (min-width: width-tabletlandscape)
		width 80%

	.modal-content
		border-radius 0
		border none
		color #9e9e9e

		.modal-header
			border none
			color site-black
			padding 30px 0 5px
			position relative

			@media (min-width: width-tabletlandscape)
				padding 70px 0 15px

			button
				border 2px solid site-black
				color site-black
				opacity 1
				position absolute
				right 10px
				top 10px

				@media (min-width: width-tabletlandscape)
					right 20px
					top 20px

			h4
				font-size 24px
				letter-spacing 10px
				text-transform uppercase

				@media (min-width: width-tabletlandscape)
					font-size 30px

		.modal-body
			font-size 14px
			margin 0 auto
			padding-bottom 30px
			width 80%

			@media (min-width: width-tabletlandscape)
				font-size 18px
				padding-bottom 70px